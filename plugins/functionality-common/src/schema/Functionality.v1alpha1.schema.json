{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "FunctionalityV1alpha1",
  "description": "A Functionality is a representation of a business function",
  "examples": [
    {
      "apiVersion": "functionality.tw/v1alpha1",
      "kind": "Functionality",
      "metadata": {
        "name": "functionalityA",
        "title": "Functionality A",
        "description": "Simple Functionality",
        "tags": [
          "recommended"
        ]
      },
      "spec": {
        "owner": "artist-relations-team",
        "components": "funcA",
        "platform": "platformA"
      }
    }
  ],
  "allOf": [
    {
      "$ref": "Entity"
    },
    {
      "type": "object",
      "properties": {
        "apiVersion": {
          "enum": [
            "functionality.tw/v1alpha1"
          ]
        },
        "kind": {
          "enum": [
            "Functionality"
          ]
        },
        "spec": {
          "type": "object",
          "properties": {
            "owner": {
              "type": "string",
              "description": "The user (or group) owner of the functionality",
              "minLength": 1
            },
            "components": {
              "type": "string",
              "description": "The components that are part of implementing this functionality",
              "minLength": 1
            },
            "platform": {
              "type": "string",
              "description": "The platform to which this functionality belongs to",
              "minLength": 1
            }
          }
        }
      }
    }
  ]
}